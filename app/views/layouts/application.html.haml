!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Acromatic
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Open+Sans'
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Alegreya'
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Roboto+Mono'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = render 'layouts/userbar' #if user_signed_in?
    - if notice
      %p#notice= notice
    - if alert
      %p#alert= alert
    = yield
